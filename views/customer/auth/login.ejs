<%- include('../../shared/includes/head', {pageTitle: 'Login'}) %>
    <link rel="stylesheet" href="/styles/forms.css">
    <link rel="stylesheet" href="/styles/auth.css">
</head>

<body>
<%-include('../../shared/includes/header') %>
<main> <h1>Login</h1>
    <% if (inputData.message) { %>
        <section class="alert"><h2>Bad credentials</h2>
        <p><%= inputData.message %></p></section>

    <% } %>   
<form action="/login" method="POST">
    <input type="hidden" name="_csrf" value="<%= locals.csrf %>"> 
    <p class="sixfour">
        <label for="email">
        E-mail
        </label>
        <input type="email" name="email" id="email" required>
    </p>
    
    <p>
        <label for="pw">
        Password
        </label>
        <input type="password" name="pw" id="pw" required>
    </p>
    
    <button class="btn">
        Login
    </button>
    <p id="switch-form"><a href='/signup'>New user</a></p>
     </form>
</main>

<%- include('../../shared/includes/footer') %>