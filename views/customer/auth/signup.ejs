<%- include('../../shared/includes/head', {pageTitle: 'Signup'}) %>
    <link rel="stylesheet" href="/styles/forms.css">
    <link rel="stylesheet" href="/styles/auth.css">
</head>

<body>
<%-include('../../shared/includes/header') %>
<main> <h1 class="sixfour">Create new account</h1>
    <% if (inputData.errorMessage) { %>
        <section class="alert"><h2>Invalid input</h2>
        <p><%= inputData.errorMessage %></p></section>

    <% } %>   
<form action="/signup" method="POST">
    <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>"> 
    <p class="sixfour">
        <label for="email">
        E-mail
        </label>
        <input type="email" name="email" id="email" value="<%= inputData.email %>" required>
    </p>
    <p>
        <label for="confirm-email">
        Confirm
        </label>
        <input type="email" name="cfemail" id="cfemail" required>
    </p>
    <p>
        <label for="pw">
        Password
        </label>
        <input type="password" name="pw" id="pw" value="<%= inputData.pw %>" required>
    </p>
    <hr>
   
    <p>
        <label for="fullname">
        Full name
        </label>
        <input type="text" name="fullname" id="fullname" required>
    </p>
    <p>
        <label for="street">
        Street
        </label>
        <input type="text" name="street" id="street" required>
    </p>
    <p>
        <label for="city">
        City
        </label>
        <input type="text" name="city" id="city" required>
    </p>
    <button class="btn">
        Create Account
    </button>
    <p id="switch-form"><a href='/login'>Login instead</a></p>
     </form>
</main>

<%- include('../../shared/includes/footer') %>