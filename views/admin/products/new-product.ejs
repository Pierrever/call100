<%- include('../../shared/includes/head', {pageTitle: 'New product'}) %>
    <link rel="stylesheet" href="/styles/forms.css">
   
</head>

<body>
<%-include('../../shared/includes/header') %>
<main>
    <h1>Add new product</h1>
    <form action="" method="">
        <p>
            <label for="title">Title</label>
            <input type="text" id="title" name="title"> 
        </p>
        
        <p>
            <label for="image">Image</label>
            <input type="file" id="image" name="image" accept="image/jpg, image/png"> 
        </p>
        <p>
            <label for="summary">Summary</label>
            <input type="textarea" id="summary" name="summary" maxlength="250"> 
        </p>

        <p>
            <label for="Price">Price</label>
            <input type="number" id="price" name="price" min="0.01" step="0.01"> 
        </p>

        <p>
            <label for="Description">Description</label>
            <textarea type="number" id="price" name="description" rows="7"></textarea>
        </p>

        <p>
            <button type="reset" class="btn btn-alt">Reset</button>
            <button type="reset">Save</button>
        </p>
</form>
</main>

<%- include('../../shared/includes/footer') %>