<form
  action="<%= submitPath %>?_csrf=<%= locals.csrfToken%>"
  method="POST"
  enctype="multipart/form-data"
>
  <p>
    <label for="title">Title</label>
    <input type="text" id="title" name="title" value="<%= product.title %>" />
  </p>

  <p>
    <label for="image">Image</label>
    <input type="file" id="image" name="image" accept="image/jpg, image/png" />
  </p>
  <p>
    <label for="summary">Summary</label>
    <input
      type="textarea"
      id="summary"
      name="summary"
      maxlength="250"
      value="<% product.summary %>"
    />
  </p>

  <p>
    <label for="Price">Price</label>
    <input
      type="number"
      id="price"
      name="price"
      min="0.01"
      step="0.01"
      value="<%= product.price %>"
    />
  </p>

  <p>
    <label for="Description">Description</label>
    <textarea type="number" id="price" name="description" rows="7">
Lukin</textarea
    >
  </p>

  <p>
    <button type="reset" class="btn btn-alt">Reset</button>
    <button class="btn">Save</button>
  </p>
</form>
